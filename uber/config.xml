<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nansthomas.uber" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>UberRace</name>
    <description>
        UberRace est un jeu développé pour Uber qui permet aux joueurs de gagner des Crédits Uber.
    </description>
    <author email="nans.thomas@hetic.net" href="http://race.uber.com">
        UberRace Team
    </author>
    <content src="index.html" />
    <access origin="*." />

    <preference name="EnableViewportScale" value="true"/>
    <preference name="TopActivityIndicator" value="white"/>
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />

    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarStyle" value="lightcontent" />

    <platform name="ios">
    <!-- SplashScreen iOS iPhone -->
        <splash src="www/img/splash/Default~iphone.png" width="320" height="480"/>
        <splash src="www/img/splash/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="www/img/splash/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="www/img/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="www/img/splash/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="www/img/splash/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="www/img/splash/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="www/img/splash/Default-667h.png" width="750" height="1334"/>
        <splash src="www/img/splash/Default-736h.png" width="1242" height="2208"/>
        <splash src="www/img/splash/Default-Landscape-736h.png" width="2208" height="1242"/>
    </platform>

    <platform name="ios">
        <!-- Icon Application -->
             <!-- iOS 8.0+ -->
             <!-- iPhone 6 Plus  -->
             <icon src="www/img/applogo/icon-60@3x.png" width="180" height="180" />
             <!-- iOS 7.0+ -->
             <!-- iPhone / iPod Touch  -->
             <icon src="www/img/applogo/icon-60.png" width="60" height="60" />
             <icon src="www/img/applogo/icon-60@2x.png" width="120" height="120" />
             <!-- iPad -->
             <icon src="www/img/applogo/icon-76.png" width="76" height="76" />
             <icon src="www/img/applogo/icon-76@2x.png" width="152" height="152" />
             <!-- iOS 6.1 -->
             <!-- Spotlight Icon -->
             <icon src="www/img/applogo/icon-40.png" width="40" height="40" />
             <icon src="www/img/applogo/icon-40@2x.png" width="80" height="80" />
             <!-- iPhone / iPod Touch -->
             <icon src="www/img/applogo/icon.png" width="57" height="57" />
             <icon src="www/img/applogo/icon@2x.png" width="114" height="114" />
             <!-- iPad -->
             <icon src="www/img/applogo/icon-72.png" width="72" height="72" />
             <icon src="www/img/applogo/icon-72@2x.png" width="144" height="144" />
             <!-- iPhone Spotlight and Settings Icon -->
             <icon src="www/img/applogo/icon-small.png" width="29" height="29" />
             <icon src="www/img/applogo/icon-small@2x.png" width="58" height="58" />
             <!-- iPad Spotlight and Settings Icon -->
             <icon src="www/img/applogo/icon-50.png" width="50" height="50" />
             <icon src="www/img/applogo/icon-50@2x.png" width="100" height="100" />
    </platform>

<preference name="SplashScreenDelay" value="10000" />

</widget>
