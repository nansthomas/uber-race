<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nansthomas.uber" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="AllowInlineMediaPlayback" value="false" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="DisallowOverscroll" value="false" />
    <preference name="EnableViewportScale" value="false" />
    <preference name="KeyboardDisplayRequiresUserAction" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="GapBetweenPages" value="0" />
    <preference name="PageLength" value="0" />
    <preference name="PaginationBreakingMode" value="page" />
    <preference name="PaginationMode" value="unpaginated" />
    <feature name="LocalStorage">
        <param name="ios-package" value="CDVLocalStorage" />
    </feature>
    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" />
        <param name="onload" value="true" />
    </feature>
    <feature name="PushbotsPlugin">
        <param name="ios-package" value="PushbotsPlugin" />
    </feature>
    <feature name="SocialSharing">
        <param name="ios-package" value="SocialSharing" />
        <param name="onload" value="true" />
    </feature>
    <splash height="480" src="www/img/splash/Default~iphone.png" width="320" />
    <splash height="960" src="www/img/splash/Default@2x~iphone.png" width="640" />
    <splash height="1024" src="www/img/splash/Default-Portrait~ipad.png" width="768" />
    <splash height="2048" src="www/img/splash/Default-Portrait@2x~ipad.png" width="1536" />
    <splash height="768" src="www/img/splash/Default-Landscape~ipad.png" width="1024" />
    <splash height="1536" src="www/img/splash/Default-Landscape@2x~ipad.png" width="2048" />
    <splash height="1136" src="www/img/splash/Default-568h@2x~iphone.png" width="640" />
    <splash height="1334" src="www/img/splash/Default-667h.png" width="750" />
    <splash height="2208" src="www/img/splash/Default-736h.png" width="1242" />
    <splash height="1242" src="www/img/splash/Default-Landscape-736h.png" width="2208" />
    <icon height="180" src="www/img/applogo/icon-60@3x.png" width="180" />
    <icon height="60" src="www/img/applogo/icon-60.png" width="60" />
    <icon height="120" src="www/img/applogo/icon-60@2x.png" width="120" />
    <icon height="76" src="www/img/applogo/icon-76.png" width="76" />
    <icon height="152" src="www/img/applogo/icon-76@2x.png" width="152" />
    <icon height="40" src="www/img/applogo/icon-40.png" width="40" />
    <icon height="80" src="www/img/applogo/icon-40@2x.png" width="80" />
    <icon height="57" src="www/img/applogo/icon.png" width="57" />
    <icon height="114" src="www/img/applogo/icon@2x.png" width="114" />
    <icon height="72" src="www/img/applogo/icon-72.png" width="72" />
    <icon height="144" src="www/img/applogo/icon-72@2x.png" width="144" />
    <icon height="29" src="www/img/applogo/icon-small.png" width="29" />
    <icon height="58" src="www/img/applogo/icon-small@2x.png" width="58" />
    <icon height="50" src="www/img/applogo/icon-50.png" width="50" />
    <icon height="100" src="www/img/applogo/icon-50@2x.png" width="100" />
    <name>UberRace</name>
    <description>
        UberRace est un jeu développé pour Uber qui permet aux joueurs de gagner des Crédits Uber.
    </description>
    <author email="nans.thomas@hetic.net" href="http://race.uber.com">
        UberRace Team
    </author>
    <content src="index.html" />
    <access origin="*." />
    <preference name="EnableViewportScale" value="true" />
    <preference name="TopActivityIndicator" value="white" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="SplashScreenDelay" value="10000" />
</widget>
